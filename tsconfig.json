{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "Node",
    "target": "es2016",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "ES2016",
      "dom"
    ],
    "paths": {
      "@virtual-scrolled/*": [
        "packages/*/src"
      ],
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/*/src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}