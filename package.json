{
  "name": "virtual-scrolled-root",
  "version": "1.0.0-20240202",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "changelogs": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "prettier src/**/*.{js,ts,json} --write && eslint src/**/*.{js,ts} --fix",
    "commit": "cz",
    "test": "echo test",
    "restart:vue3": "pnpm build && cd examples/vue3 && rm -rf node_module/.vite && pnpm start",
    "build": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "dev": "tsc --watch"
  },
  "pre-commit": [
    "eslint"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint",
      "pre-commit": "lint-staged",
      "pre-push": "test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^23.0.7",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-strip": "^3.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.16",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "babel": "^6.23.0",
    "chai": "^4.3.7",
    "commitizen": "^4.2.6",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.1",
    "rollup": "^4.1.4",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">= 16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.6.2"
  }
}
